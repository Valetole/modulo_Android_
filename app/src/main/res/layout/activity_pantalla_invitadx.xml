<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PantallaInvitadx">

    <Button
        android:id="@+id/botonCrearRegistroInvitadx"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/boton_crearRegistro"
        app:layout_constraintBottom_toTopOf="@+id/botonStockProductos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonStockProductos"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="216dp"
        android:text="@string/visualizarStock"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonCrearRegistroInvitadx"
        app:layout_constraintVertical_bias="0.821" />

    <Button
        android:id="@+id/botonRealizaPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Realizar pedido"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonStockProductos" />
</androidx.constraintlayout.widget.ConstraintLayout>